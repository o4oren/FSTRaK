<UserControl x:Class="FSTRaK.Views.FlightDetailsView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:viewmodels="clr-namespace:FSTRaK.ViewModels" xmlns:map="clr-namespace:MapControl;assembly=MapControl.WPF" 
             xmlns:views="clr-namespace:FSTRaK.Views"
      d:DataContext="{d:DesignInstance Type=viewmodels:FlightDetailsViewModel}"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
        Loaded="OnLoaded"
             Unloaded="OnUnLoaded"
      >

    <Border Margin="10,10,10,10" 
            BorderBrush="{StaticResource TextColor}" 
            CornerRadius="5" 
            BorderThickness="1" 
            Padding="8"
            VerticalAlignment="Stretch"
            HorizontalAlignment="Stretch"
            >

        <Grid Margin="0,0,0,0">

            <Grid Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">

                <map:Map x:Name="logbookMap" 
                 MapLayer="{Binding MapProvider}" 
                 ZoomLevel="3" 
                 Center="51,0"
                 MapProjection="{StaticResource WebMercatorProjection}"
                 Margin="10,10,10,10">
                    <map:MapScale Opacity="0.5" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="5" />
                    <!-- map:MapGraticule Opacity="0.5"/ -->
                    <map:MapPolyline 
                        Locations="{Binding FlightPath}" 
                        Stroke="Red" StrokeThickness="3" 
                        StrokeLineJoin="round"/>
                </map:Map>
                <StackPanel Orientation="Horizontal">
                    <StackPanel HorizontalAlignment="left">
                        <views:OverlayTextCardControl Grid.Row="4" Grid.Column="3"  Header="Aircraft:" Text="{Binding Flight.Aircraft.Title}"/>
                        <views:OverlayTextCardControl Grid.Row="4" Grid.Column="3"  Header="Departed:" Text="{Binding Flight.DepartureAirport}"/>
                        <views:OverlayTextCardControl Grid.Row="4" Grid.Column="3"  Header="Arrived:" Text="{Binding Flight.ArrivalAirport}"/>
                        <views:OverlayTextCardControl Grid.Row="4" Grid.Column="3"  Header="Start time:" Text="{Binding Flight.StartTime}"/>
                        <views:OverlayTextCardControl Grid.Row="4" Grid.Column="3"  Header="End time:" Text="{Binding Flight.EndTime}"/>
                        <views:OverlayTextCardControl Grid.Row="4" Grid.Column="3"  Header="Block time:" Text="{Binding Flight.FlightTime}"/>

                        <views:OverlayTextCardControl Grid.Row="4" Grid.Column="3"  Header="Total Fuel:" Text="{Binding Flight.TotalFuelUsed}"/>
                        <views:OverlayTextCardControl Grid.Row="4" Grid.Column="3"  Header="Distance:" Text="{Binding Flight.FlightDistance}"/>
                        <views:OverlayTextCardControl Grid.Row="4" Grid.Column="3"  Header="Score:" Text="{Binding Flight.Score}"/>
                    </StackPanel>
                    
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</UserControl>
