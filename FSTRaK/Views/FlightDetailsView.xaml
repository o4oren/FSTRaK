<UserControl x:Class="FSTRaK.Views.FlightDetailsView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:viewmodels="clr-namespace:FSTRaK.ViewModels" xmlns:map="clr-namespace:MapControl;assembly=MapControl.WPF"
             d:DataContext="{d:DesignInstance Type=viewmodels:FlightDetailsViewModel}"
      mc:Ignorable="d" Width="800" Height="600"
        Loaded="OnLoaded"
             Unloaded="OnUnLoaded"
      >

    <Border Margin="10,10,10,10" 
            BorderBrush="{StaticResource TextColor}" 
            CornerRadius="5" 
            BorderThickness="1" 
            Padding="8"
            VerticalAlignment="Stretch"
            HorizontalAlignment="Stretch"
            >

        <Grid Margin="0,0,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="3*"/>
            </Grid.RowDefinitions>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Row="0" Grid.Column="0" Text="From:"/>
                <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding Flight.DepartureAirport}"/>
                <TextBlock Grid.Row="1" Grid.Column="0" Text="To:"/>
                <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Flight.ArrivalAirport}"/>
                <TextBlock Grid.Row="2" Grid.Column="0" Text="Aircraft:"/>
                <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding Flight.Aircraft.Title}"/>
                <TextBlock Grid.Row="3" Grid.Column="0" Text="Started at:"/>
                <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding Flight.StartTime}"/>
                <TextBlock Grid.Row="4" Grid.Column="0" Text="Ended at:"/>
                <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding Flight.EndTime}"/>

                <TextBlock Grid.Row="0" Grid.Column="2" Text="BlockTime:"/>
                <TextBlock Grid.Row="0" Grid.Column="3" Text="{Binding Flight.FlightTime}"/>
                <TextBlock Grid.Row="1" Grid.Column="2" Text="Total Fuel used:"/>
                <TextBlock Grid.Row="1" Grid.Column="3" Text="{Binding Flight.TotalFuelUsed}"/>
                <TextBlock Grid.Row="2" Grid.Column="2" Text="Total Distance:"/>
                <TextBlock Grid.Row="2" Grid.Column="3" Text="{Binding FlightDistance}"/>
                <TextBlock Grid.Row="3" Grid.Column="2" Text="Landing VS:"/>
                <TextBlock Grid.Row="3" Grid.Column="3" Text="{Binding LandingVerticalSpeed}"/>
                <TextBlock Grid.Row="4" Grid.Column="2" Text="Score:"/>
                <TextBlock Grid.Row="4" Grid.Column="3" Text="{Binding Flight.Score}"/>
            </Grid>
            <Grid Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <map:Map x:Name="logbookMap" 
                 MapLayer="{Binding MapProvider}" 
                 ZoomLevel="3" 
                 Center="51,0"
                 MapProjection="{StaticResource WebMercatorProjection}"
                 Margin="10,10,10,10">
                    <map:MapPolyline 
                        Locations="{Binding FlightPath}" 
                        Stroke="Red" StrokeThickness="3" 
                        StrokeLineJoin="round"/>
                </map:Map>
            </Grid>
        </Grid>
    </Border>
</UserControl>
